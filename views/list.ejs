  <div class="box" id="heading">
    <h1><%= kindofday %></h1>
  </div>
  <div class="box">
    <% for(var i=0; i<item.length ;i++){ %>
    <div class="item">
      <input type="checkbox" />
      <p><%= item[i] %></p>
    </div>
    <%} %>
    <form class="item" method="post" action="/">
